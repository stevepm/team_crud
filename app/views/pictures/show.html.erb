<div class="full_column" id="notice">
  <% flash.each do |_, msg| -%>
    <%= msg %>
  <% end -%>
  <div class="resetColumnSet"></div>
</div>
<!--end full_column-->
<div class="one_third" id="left_side">
  <img src="<%= @picture.url %>" class="thumbnail">

  <p>Rating: <%= @picture.rating %> out of 5</p>
</div>
<div class="one_third" id="right_side">
  <p>
    <a href="<%= @picture.url %>"><%= @picture.url %></a> &nbsp; <a href="/pictures/<%= @picture.id %>/edit">(Edit)</a>
  </p>

  <p>
    <% @picture.description.split("\n").each do |line| %>
      <%= line %><br/>
    <% end %>
  </p>
</div>
<div class="resetColumnSet"></div>
<div class="one_third" id="left_side">&nbsp;</div>
<div class="one_third" id="right_side">
  <%= button_to('Delete Picture', picture_path(@picture), method: :delete, :id => "delete_button") %>
</div>
<div class="resetColumnSet"></div>
