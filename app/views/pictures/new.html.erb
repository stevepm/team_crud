<div id="picture_form">
  <h1>Add a picture</h1>

  <%= form_for @picture, url: {action: 'create'}, id: 'picture-form' do |f| %>
    <% if @picture.errors.any? %>
      <div class="error">
        <% @picture.errors.each do |_, msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>
    <table>
      <tr>
        <td><%= f.label :url %></td>
        <td><%= f.text_field :url, :id => 'url' %></td>
      </tr>
      <br/>
      <tr>
        <td><%= f.label :description %></td>
        <td><%= f.text_area :description, :id => 'description' %></td>
      </tr>
      <br/>
      <tr>
        <td><%= f.label :rating %></td>
        <td><%= f.text_field :rating, :id => 'rating' %></td>
      </tr>
    </table>
    <br/>
    <%= f.submit 'Create Picture', :id => 'picture-button' %>

  <% end %>
</div>