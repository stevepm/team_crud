<%= form_for @picture, url: {action: 'create'} do |f| %>
  <% if @picture.errors.any? %>
    <div class="error">
      <% @picture.errors.each do |_, msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.label :url %>
  <%= f.text_field :url, :id => 'url' %>
  <%= f.label :description %>
  <%= f.text_area :description, :id => 'description' %>
  <%= f.label :rating %>
  <%= f.text_field :rating, :id => 'rating' %>
  <%= f.submit 'Create Picture' %>
<% end %>