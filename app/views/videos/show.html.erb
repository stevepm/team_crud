<div class="full_column" id="notice">
  <% flash.each do |_, msg| -%>
    <h3><%= msg %></h3>
  <% end -%>
  <div class="resetColumnSet"></div>
</div>
<div class="one_half">
  <iframe width="420" height="315" src="//www.youtube.com/embed/<%= @youtube_id %>" frameborder="0" allowfullscreen></iframe>
  <p>Rating: <%= @video.rating %> out of 5</p>
</div>


<div class="one_half">
  <p>
    <a href=<%= @video.url %>><%= @video.url %></a> &nbsp; <a href="/videos/<%= @video.id %>/edit">(Edit)</a>
  </p>

  <p><%= simple_format(@video.description) %></p>
  <% 5.times do %>
    <br>
  <% end %>
  <%= button_to "Delete Video", video_path(@video), method: :delete, data: {confirm: "Are you sure?"}, :id => "delete_button" %>
</div>
